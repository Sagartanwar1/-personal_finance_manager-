{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/*"],
      "api/*": ["apps/api/src/*"],
      "web/*": ["apps/web/*"]
    }
  },
  "include": [
    "apps/**/*",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}